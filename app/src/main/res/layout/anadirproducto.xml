<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editCantidad"
        android:layout_width="317dp"
        android:layout_height="53dp"
        android:text="@string/stock"
        app:layout_constraintBottom_toTopOf="@+id/editCantidadMin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNombre" />

    <EditText
        android:id="@+id/editCantidadMin"
        android:layout_width="317dp"
        android:layout_height="53dp"
        android:layout_marginStart="172dp"
        android:text="@string/stockMin"
        app:layout_constraintBottom_toTopOf="@+id/editPrecio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/botonFoto"
        app:layout_constraintTop_toBottomOf="@+id/editCantidad" />

    <EditText
        android:id="@+id/editPrecio"
        android:layout_width="317dp"
        android:layout_height="53dp"
        android:text="@string/preciou"
        app:layout_constraintBottom_toTopOf="@+id/btnAnadir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editCantidadMin"
        app:layout_constraintTop_toBottomOf="@+id/editCantidadMin" />

    <ImageButton
        android:id="@+id/botonFoto"
        android:layout_width="435dp"
        android:layout_height="420dp"
        android:layout_marginStart="112dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/buttonUser"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editCantidad"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/masomenos" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nuevo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="317dp"
        android:layout_height="53dp"
        android:text="@string/nombre"
        app:layout_constraintBottom_toTopOf="@+id/editCantidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toEndOf="@+id/botonFoto"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="163dp"
        android:layout_height="75dp"
        android:backgroundTint="#EC407A"
        android:text="@string/cancelar"
        android:textColor="#fff"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAnadir"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonFoto"
        app:layout_constraintVertical_bias="0.545" />

    <Button
        android:id="@+id/btnAnadir"
        android:layout_width="163dp"
        android:layout_height="75dp"
        android:backgroundTint="#26C6DA"
        android:text="@string/anadir"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnCancel"
        app:layout_constraintTop_toBottomOf="@+id/editPrecio" />

</androidx.constraintlayout.widget.ConstraintLayout>