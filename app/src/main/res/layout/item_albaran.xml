<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:id="@+id/textViewAlbaranId"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="8dp"
            android:text="ID"
            android:background="#EC407AFF"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewFechaAlbaran"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:padding="8dp"
            android:text="Fecha"
            android:background="#EC407A"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/textViewEstadoAlbaran"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:padding="8dp"
            android:text="Estado"
            android:background="#EC407AFF  "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewNifAlbaran"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:padding="8dp"
            android:text="NIF"
            android:background="#EC407A"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkboxSeleccion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="invisible"
            android:padding="8dp" />
    </TableRow>
</TableLayout>
